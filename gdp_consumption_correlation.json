{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Coffee Consumption vs GDP Per Capita (2019)",
    "subtitle": "Examining the relationship between economic prosperity and coffee drinking habits",
    "fontSize": 24,
    "subtitleFontSize": 13
  },
  "width": "container",
  "height": 600,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/Ng-Jun-Xian/3179-A2/main/gdp_cleaned.csv"
  },
  "transform": [
    {
      "filter": "datum['2019'] != null && datum['2019'] != ''"
    },
    {
      "calculate": "toNumber(datum['2019'])",
      "as": "GDP_Per_Capita"
    },
    {
      "lookup": "Country Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Ng-Jun-Xian/3179-A2/main/Coffee_consumption_per_capita.csv"
        },
        "key": "Country",
        "fields": ["Year", "Consumption_Per_Capita_kg", "Population"]
      }
    },
    {
      "filter": "datum.Year == 2019"
    },
    {
      "filter": "datum.Consumption_Per_Capita_kg != null && datum.Population != null"
    },
    {
      "calculate": "toNumber(datum.Consumption_Per_Capita_kg)",
      "as": "Coffee_Consumption"
    },
    {
      "calculate": "toNumber(datum.Population)",
      "as": "Pop"
    },
    {
      "filter": "datum.Coffee_Consumption > 0 && datum.GDP_Per_Capita > 0"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "circle",
        "opacity": 0.7,
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "x": {
          "field": "GDP_Per_Capita",
          "type": "quantitative",
          "title": "GDP Per Capita (USD)",
          "scale": {"type": "log", "domain": [1000, 300000]},
          "axis": {"tickCount": 6, "grid": true, "format": ",.0f"}
        },
        "y": {
          "field": "Coffee_Consumption",
          "type": "quantitative",
          "title": "Coffee Consumption Per Capita (kg/year)",
          "scale": {"domain": [0, 22]},
          "axis": {"grid": true}
        },
        "size": {
          "field": "Pop",
          "type": "quantitative",
          "title": "Population",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [80, 200, 400, 700, 1000, 1500]
          },
          "legend": {
            "format": ".2s",
            "orient": "bottom"
          }
        },
        "color": {
        "field": "Pop",
        "type": "quantitative",
        "title": "Population",
        "scale": {"scheme": "viridis", "type": "log"},
        "legend": {
          "orient": "bottom"
        }
      },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {"field": "GDP_Per_Capita", "type": "quantitative", "title": "GDP Per Capita (USD)", "format": ",.0f"},
          {"field": "Coffee_Consumption", "type": "quantitative", "title": "Coffee Consumption (kg)"},
          {"field": "Pop", "type": "quantitative", "format": ",.0f"}
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "datum.GDP_Per_Capita >= 5000"
        },
        {
          "regression": "Coffee_Consumption",
          "on": "GDP_Per_Capita",
          "method": "log",
          "extent": [5000, 300000]
        },
        {
          "filter": "datum.Coffee_Consumption > 0"
        }
      ],
      "mark": {
        "type": "line",
        "color": "firebrick",
        "strokeWidth": 3,
        "opacity": 0.8
      },
      "encoding": {
        "x": {
          "field": "GDP_Per_Capita",
          "type": "quantitative"
        },
        "y": {
          "field": "Coffee_Consumption",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum.GDP_Per_Capita >= 5000"
        },
        {
          "regression": "Coffee_Consumption",
          "on": "GDP_Per_Capita",
          "method": "log",
          "params": true
        },
        {
          "calculate": "'RÂ² = ' + format(datum.rSquared, '.2f')",
          "as": "R2_text"
        }
      ],
      "mark": {
        "type": "text",
        "x": 600,
        "y": 30,
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "firebrick"
      },
      "encoding": {
        "text": {"field": "R2_text", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null}
  }
}