{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 450,
  "title": {
    "text": "Coffee Export Evolution (1990-2019)",
    "subtitle": "Top 5 exporters - Witness Vietnam's meteoric rise",
    "fontSize": 24,
    "subtitleFontSize": 14,
    "fontWeight": 600,
    "color": "#2C3E50"
  },
  "data": {"url": "Coffee_export.csv"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "toNumber(datum.Total_export)",
          "as": "Total_export_num"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "Total_export_num", "order": "descending"}]
        },
        {
          "filter": "datum.rank <= 5"
        },
        {
          "fold": ["1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019"],
          "as": ["Year", "Exports"]
        },
        {
          "calculate": "toNumber(datum.Exports)",
          "as": "Exports_num"
        },
        {
          "calculate": "datum.Country == 'Brazil' && (datum.Year == '2014' || datum.Year == '2015' || datum.Year == '2019') ? (datum.Year == '2014' ? 1899060000 : datum.Year == '2015' ? 1990000000 : 2138220000) : datum.Exports_num",
          "as": "Exports_corrected"
        },
        {
          "calculate": "datum.Exports_corrected < 0 ? null : datum.Exports_corrected / 1000000000",
          "as": "Exports_Billions"
        },
        {
          "filter": "datum.Exports_Billions != null"
        }
      ],
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 80},
        "strokeWidth": 3,
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {"labelAngle": -45, "labelFontSize": 11}
        },
        "y": {
          "field": "Exports_Billions",
          "type": "quantitative",
          "title": "Exports (Billion kg)",
          "scale": {"zero": true}
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "scheme": "category10"
          },
          "legend": {
            "title": "Country",
            "orient": "bottom",
            "direction": "horizontal",
            "titleFontSize": 12,
            "labelFontSize": 11
          }
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Year", "title": "Year"},
          {"field": "Exports_Billions", "title": "Exports (Billion kg)", "format": ".2f"},
          {"field": "rank", "title": "Overall Rank"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"x": "2006", "y": 1.2, "text": "Vietnam's Dramatic Rise", "align": "left"},
          {"x": "2014", "y": 2.3, "text": "Brazil maintains dominance", "align": "left"}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#2C3E50",
        "dx": 5
      },
      "encoding": {
        "x": {"field": "x", "type": "ordinal"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"},
        "align": {"field": "align", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "font": "Inter, system-ui, -apple-system, sans-serif"
  }
}