{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Coffee Export Evolution (1990-2019)",
    "subtitle": "Top 5 exporters - Witness Vietnam's meteoric rise",
    "fontSize": 20,
    "fontWeight": 600,
    "color": "#2C3E50"
  },
  "data": {"url": "Coffee_export.csv"},
  "transform": [
    {
      "filter": "indexof(['Brazil', 'Vietnam', 'Colombia', 'Indonesia', 'India'], datum.Country) >= 0"
    },
    {
      "fold": ["1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019"],
      "as": ["Year", "Exports"]
    },
    {
      "calculate": "toNumber(datum.Exports)",
      "as": "Exports_num"
    },
    {
      "calculate": "datum.Country == 'Brazil' && (datum.Year == '2014' || datum.Year == '2015' || datum.Year == '2019') ? (datum.Year == '2014' ? 1899060000 : datum.Year == '2015' ? 1990000000 : 2138220000) : datum.Exports_num",
      "as": "Exports_corrected"
    },
    {
      "calculate": "datum.Exports_corrected < 0 ? null : datum.Exports_corrected / 1000000000",
      "as": "Exports_Billions"
    },
    {
      "filter": "datum.Exports_Billions != null"
    }
  ],
  "mark": {
    "type": "line",
    "point": {"filled": true, "size": 80},
    "strokeWidth": 3,
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelAngle": -45, "labelFontSize": 11}
    },
    "y": {
      "field": "Exports_Billions",
      "type": "quantitative",
      "title": "Exports (Billion kg)",
      "scale": {"zero": true}
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "domain": ["Brazil", "Vietnam", "Colombia", "Indonesia", "India"],
        "range": ["#E74C3C", "#F39C12", "#3498DB", "#2ECC71", "#9B59B6"]
      },
      "legend": {
        "title": "Country",
        "titleFontSize": 13,
        "labelFontSize": 12,
        "orient": "right"
      }
    },
    "tooltip": [
      {"field": "Country", "title": "Country"},
      {"field": "Year", "title": "Year"},
      {"field": "Exports_Billions", "title": "Exports (Billion kg)", "format": ".2f"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "font": "Inter, system-ui, sans-serif"
  }
}