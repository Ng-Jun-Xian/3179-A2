{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 450,
  "title": {
    "text": "Coffee Import Evolution (1990-2019)",
    "subtitle": "Top 5 importers - US dominance and Germany's steady growth",
    "fontSize": 24,
    "subtitleFontSize": 14,
    "fontWeight": 600,
    "color": "#2C3E50"
  },
  "data": {"url": "Coffee_import.csv"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "toNumber(datum.Total_import)",
          "as": "Total_import_num"
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "Total_import_num", "order": "descending"}]
        },
        {
          "filter": "datum.rank <= 5"
        },
        {
          "fold": ["1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019"],
          "as": ["Year", "Imports"]
        },
        {
          "calculate": "toNumber(datum.Imports)",
          "as": "Imports_num"
        },
        {
          "calculate": "datum.Imports_num < 0 ? null : datum.Imports_num / 1000000000",
          "as": "Imports_Billions"
        },
        {
          "filter": "datum.Imports_Billions != null"
        }
      ],
      "mark": {
        "type": "line",
        "point": {"filled": true, "size": 80},
        "strokeWidth": 3,
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {"labelAngle": -45, "labelFontSize": 11}
        },
        "y": {
          "field": "Imports_Billions",
          "type": "quantitative",
          "title": "Imports (Billion kg)",
          "scale": {"zero": true}
        },
        "color": {
          "field": "Country",
          "type": "nominal",
          "scale": {
            "scheme": "tableau10"
          },
          "legend": {
            "title": "Country",
            "orient": "bottom",
            "direction": "horizontal",
            "titleFontSize": 12,
            "labelFontSize": 11
          }
        },
        "tooltip": [
          {"field": "Country", "title": "Country"},
          {"field": "Year", "title": "Year"},
          {"field": "Imports_Billions", "title": "Imports (Billion kg)", "format": ".2f"},
          {"field": "rank", "title": "Overall Rank"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"x": "2012", "y": 1.9, "text": "US leads global imports", "align": "left"},
          {"x": "2010", "y": 0.95, "text": "Germany's steady climb", "align": "center"}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 12,
        "fontWeight": "bold",
        "color": "#2C3E50",
        "dx": 5
      },
      "encoding": {
        "x": {"field": "x", "type": "ordinal"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "text", "type": "nominal"},
        "align": {"field": "align", "type": "nominal"}
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "font": "Inter, system-ui, -apple-system, sans-serif"
  }
}